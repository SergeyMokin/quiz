@model Teams.Models.TestRunIndexModel

@{
    ViewBag.Title = "Tests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Available Tests</h1>
<h3>Current user: @Model.ApplicationUser.UserName</h3>
<h3>Select a test to start examination</h3>


<table class="table" id="tests"> 
    @foreach (var item in Model.Tests) 
    { 
        <tr> 
            <td> 
                @Html.Display(item.Title) 
            </td> 
            <td align="right"> 
                @if (Model.TakenTestsIds.Contains(item.Id))
                {
                    @Html.Display("Retake / Resume") 
                }
                else
                {
                    @Html.Display("Take") 
                }
            </td> 
        </tr> 
    }    
</table>