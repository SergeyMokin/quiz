@model Teams.Domain.SingleSelectionQuestion

@{
    ViewData["Title"] = "ShowQuestion";
}

<h1>@Model.Text</h1>

<div>
    <hr />
    @foreach (var option in Model.OptionList)
    {
        <div id=@option.Id><label><input type="radio" id=@option.Id name="myradio" onchange="select()">@option.Text</label></div>
        <br />
    }
    <input type="button" id="btn" value="Подтвердить">
</div>

<script>

    btn.onclick = function () {
        $.ajax({
            type: "GET",
            url: "/SingleSelectionQuestion/FindAnswer",
            data: { 'idQuestion': '@Model.Id' },
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (obj) {
                $("#" + obj.id).css("border", "2px solid green");
            }
        });

        document.getElementsByName('myradio')
            .forEach(function (x) { x.disabled = true; });
    }

</script>